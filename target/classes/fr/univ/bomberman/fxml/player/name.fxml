<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.univ.bomberman.controller.PlayerNamesController">
    <children>
        <Label text="🎮 Noms des Joueurs 🎮">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <VBox spacing="15.0">
            <children>
                <VBox spacing="5.0">
                    <children>
                        <Label text="🔵 Joueur 1 (ZQSD + Espace)">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="player1NameField" promptText="Entrez le nom du joueur 1" />
                    </children>
                </VBox>

                <VBox spacing="5.0">
                    <children>
                        <Label text="🟢 Joueur 2 (Flèches + Entrée)">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="player2NameField" promptText="Entrez le nom du joueur 2" />
                    </children>
                </VBox>
            </children>
        </VBox>

        <HBox alignment="CENTER" spacing="20.0">
            <children>
                <Button fx:id="confirmButton" onAction="#onConfirm" text="✅ Confirmer">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Button fx:id="cancelButton" onAction="#onCancel" text="❌ Annuler">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>
</VBox>