<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.univ.bomberman.controller.ProfileSelectionController">
    <top>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="🎮 GESTION DES PROFILS BOMBERMAN" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </Label>
                <Separator />
            </children>
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </top>
    <center>
        <SplitPane dividerPositions="0.6" orientation="VERTICAL" BorderPane.alignment="CENTER">
            <items>
                <VBox spacing="10.0">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label text="📋 Profils existants:" textFill="#2c3e50">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <Region HBox.hgrow="ALWAYS" />
                                <Button fx:id="refreshButton" onAction="#onRefresh" text="🔄 Actualiser" />
                            </children>
                        </HBox>
                        <TableView fx:id="profilesTable" prefHeight="200.0">
                            <columns>
                                <TableColumn fx:id="nameColumn" prefWidth="120.0" text="👤 Nom" />
                                <TableColumn fx:id="rankColumn" prefWidth="100.0" text="🏆 Rang" />
                                <TableColumn fx:id="gamesPlayedColumn" prefWidth="80.0" text="🎮 Parties" />
                                <TableColumn fx:id="winRateColumn" prefWidth="90.0" text="📊 Victoires" />
                                <TableColumn fx:id="creationDateColumn" prefWidth="120.0" text="📅 Créé le" />
                                <TableColumn fx:id="lastPlayColumn" prefWidth="120.0" text="🕐 Dernière partie" />
                            </columns>
                        </TableView>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                    </padding>
                </VBox>
                <VBox prefHeight="262.0" prefWidth="680.0" spacing="15.0">
                    <children>
                        <HBox spacing="20.0">
                            <children>
                                <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label text="📋 Profil sélectionné:">
                                            <font>
                                                <Font name="System Bold" size="12.0" />
                                            </font>
                                        </Label>
                                        <Label fx:id="selectedProfileLabel" text="Aucun profil sélectionné" textFill="#34495e">
                                            <font>
                                                <Font name="System Bold" size="14.0" />
                                            </font>
                                        </Label>
                                        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" prefHeight="100.0" vbarPolicy="AS_NEEDED">
                                            <content>
                                                <Label fx:id="profileDetailsLabel" text="Sélectionnez un profil pour voir ses détails" wrapText="true" />
                                            </content>
                                        </ScrollPane>
                                    </children>
                                </VBox>
                                <Separator orientation="VERTICAL" />
                                <VBox spacing="8.0">
                                    <children>
                                        <Label text="🆕 Créer un nouveau profil:">
                                            <font>
                                                <Font name="System Bold" size="12.0" />
                                            </font>
                                        </Label>
                                        <HBox spacing="10.0">
                                            <children>
                                                <TextField fx:id="newProfileNameField" prefWidth="150.0" promptText="Nom du profil..." />
                                                <Button fx:id="createButton" onAction="#onCreateProfile" text="✨ Créer" />
                                            </children>
                                        </HBox>
                                        <Label text="💡 Max 15 caractères, nom unique" textFill="#7f8c8d">
                                            <font>
                                                <Font size="10.0" />
                                            </font>
                                        </Label>
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                        <Separator />
                        <HBox spacing="10.0">
                            <children>
                                <Label text="⚙️ Actions sur le profil sélectionné:">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                            </children>
                        </HBox>
                        <GridPane hgap="10.0" vgap="8.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <Button fx:id="statsButton" maxWidth="1.7976931348623157E308" onAction="#onShowStats" text="📊 Statistiques" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                <Button fx:id="duplicateButton" maxWidth="1.7976931348623157E308" onAction="#onDuplicateProfile" text="📋 Dupliquer" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                <Button fx:id="deleteButton" maxWidth="1.7976931348623157E308" onAction="#onDeleteProfile" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="🗑️ Supprimer" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                                <Button fx:id="importButton" maxWidth="1.7976931348623157E308" onAction="#onImportProfile" text="📥 Importer" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                <Button fx:id="exportButton" maxWidth="1.7976931348623157E308" onAction="#onExportProfile" prefHeight="73.0" prefWidth="205.0" text="📤 Exporter" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                            </children>
                        </GridPane>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                    </padding>
                </VBox>
            </items>
        </SplitPane>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" prefHeight="47.0" prefWidth="677.0" spacing="15.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="selectButton" onAction="#onSelectProfile" prefWidth="120.0" style="-fx-background-color: #27ae60; -fx-text-fill: white;" text="✅ Sélectionner">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Button>
                <Button fx:id="cancelButton" onAction="#onCancel" prefWidth="100.0" text="❌ Annuler" />
            </children>
            <padding>
                <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>
