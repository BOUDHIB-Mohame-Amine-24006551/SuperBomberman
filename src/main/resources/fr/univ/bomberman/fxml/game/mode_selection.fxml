<?xml version="1.0" encoding="UTF-8"?>

<!-- FILE: src/main/resources/fr/univ/bomberman/fxml/game/mode_selection.fxml -->

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="25.0" styleClass="main-container" xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.univ.bomberman.controller.GameModeController">
    <children>
        <!-- Titre principal -->
        <VBox alignment="CENTER" spacing="10.0">
            <children>
                <Label styleClass="title" text="🎮 SUPER BOMBERMAN 🎮">
                    <font>
                        <Font name="System Bold" size="36.0" />
                    </font>
                </Label>
                <Label styleClass="subtitle" text="Sélectionnez votre mode de jeu">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
            </children>
        </VBox>
        <HBox alignment="CENTER" spacing="30.0">
            <children>
            <Label prefHeight="31.0" prefWidth="112.0" text="Profil actuel:">
               <font>
                  <Font size="20.0" />
               </font></Label>
            <Label fx:id="currentProfileLabel" text="👤 Aucun profil sélectionné" textFill="#e12211">
                <font>
                    <Font name="System Bold" size="20.0" />
                </font>
            </Label>
            </children>
        </HBox>

        <!-- Section modes de jeu - Maintenant avec 4 cartes -->
        <HBox alignment="CENTER" spacing="15.0">
            <children>
                <!-- Mode 2 Joueurs -->
                <VBox alignment="CENTER" spacing="12.0" styleClass="game-mode-card">
                    <children>
                        <Label styleClass="mode-title" text="👥 MODE 2 JOUEURS">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>

                        <VBox alignment="CENTER" spacing="6.0">
                            <children>
                                <Label text="🔴 Duel classique" />
                                <Label text="🎯 Combat stratégique" />
                                <Label text="⚡ Action rapide" />
                                <Label text="🏆 Bataille épique" />
                            </children>
                        </VBox>

                        <VBox alignment="CENTER" spacing="4.0">
                            <children>
                                <Label styleClass="controls-title" text="CONTRÔLES:">
                                    <font>
                                        <Font name="System Bold" size="10.0" />
                                    </font>
                                </Label>
                                <Label text=" J1: ZQSD + ESPACE" />
                                <Label text=" J2: ↑↓←→ + ENTRÉE" />
                            </children>
                        </VBox>

                        <Button fx:id="twoPlayerButton" onAction="#onTwoPlayerMode" styleClass="mode-button-2p" text="LANCER 2 JOUEURS">
                            <font>
                                <Font name="System Bold" size="10.0" />
                            </font>
                        </Button>
                    </children>
                    <padding>
                        <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
                    </padding>
                </VBox>

                <!-- Mode Bot -->
                <VBox alignment="CENTER" spacing="12.0" styleClass="game-mode-card">
                    <children>
                        <Label styleClass="mode-title" text="🤖 MODE BOT">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>

                        <VBox alignment="CENTER" spacing="6.0">
                            <children>
                                <Label text=" Intelligence Artificielle" />
                                <Label text="🎯 3 niveaux de difficulté" />
                                <Label text="⚡ IA adaptative" />
                                <Label text="🏆 Défi ultime" />
                            </children>
                        </VBox>

                        <VBox alignment="CENTER" spacing="4.0">
                            <children>
                                <Label styleClass="controls-title" text="CONTRÔLES:">
                                    <font>
                                        <Font name="System Bold" size="10.0" />
                                    </font>
                                </Label>
                                <Label text="👤 Vous: ZQSD + ESPACE" />
                                <Label text="🤖 Bot: IA automatique" />
                            </children>
                        </VBox>

                        <VBox alignment="CENTER" spacing="6.0">
                            <children>
                                <Button onAction="#onBotMode" styleClass="mode-button-bot" text="DÉFIER L'IA">
                                    <font>
                                        <Font name="System Bold" size="10.0" />
                                    </font>
                                </Button>
                                <Button onAction="#onBotTutorial" styleClass="tutorial-button" text="📖 Tutoriel">
                                    <font>
                                        <Font size="8.0" />
                                    </font>
                                </Button>
                            </children>
                        </VBox>
                    </children>
                    <padding>
                        <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
                    </padding>
                </VBox>

                <!-- Mode 4 Joueurs -->
                <VBox alignment="CENTER" spacing="12.0" styleClass="game-mode-card">
                    <children>
                        <Label styleClass="mode-title" text="👥👥 BATAILLE ROYALE">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>

                        <VBox alignment="CENTER" spacing="6.0">
                            <children>
                                <Label text="🔥 Combat à 4 joueurs" />
                                <Label text="⚔ Guerre totale" />
                                <Label text="💀 Élimination directe" />
                                <Label text="👑 Dernier survivant gagne" />
                            </children>
                        </VBox>

                        <VBox alignment="CENTER" spacing="4.0">
                            <children>
                                <Label styleClass="controls-title" text="CONTRÔLES:">
                                    <font>
                                        <Font name="System Bold" size="10.0" />
                                    </font>
                                </Label>
                                <Label text=" J1: ZQSD + A" />
                                <Label text=" J2: ↑↓←→ + ENTRÉE" />
                                <Label text=" J3: IJKL + U" />
                                <Label text=" J4: 8456 + 7" />
                            </children>
                        </VBox>

                        <Button fx:id="fourPlayerButton" onAction="#onFourPlayerMode" styleClass="mode-button-4p" text="BATAILLE ROYALE">
                            <font>
                                <Font name="System Bold" size="10.0" />
                            </font>
                        </Button>
                    </children>
                    <padding>
                        <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
                    </padding>
                </VBox>

                <!-- ✅ NOUVEAU: Mode Capture the Flag -->
                <VBox alignment="CENTER" spacing="12.0" styleClass="game-mode-card">
                    <children>
                        <Label styleClass="mode-title" text="🏁 CAPTURE THE FLAG">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>

                        <VBox alignment="CENTER" spacing="6.0">
                            <children>
                                <Label text="🎯 Stratégie avancée" />
                                <Label text="🏁 Capturez les drapeaux" />
                                <Label text="💀 Éliminés continuent" />
                                <Label text=" Tactique pure" />
                            </children>
                        </VBox>

                        <VBox alignment="CENTER" spacing="4.0">
                            <children>
                                <Label styleClass="controls-title" text="OBJECTIF:">
                                    <font>
                                        <Font name="System Bold" size="10.0" />
                                    </font>
                                </Label>
                                <Label text="📍 Placez votre drapeau" />
                                <Label text="🏃 Capturez tous les autres" />
                                <Label text="🎯 Premier = Victoire !" />
                            </children>
                        </VBox>

                        <VBox alignment="CENTER" spacing="6.0">
                            <children>
                                <Button onAction="#onCTFMode" styleClass="mode-button-ctf" text="CAPTURE THE FLAG">
                                    <font>
                                        <Font name="System Bold" size="10.0" />
                                    </font>
                                </Button>
                                <Button onAction="#onCTFTutorial" styleClass="tutorial-button" text="📖 Guide CTF">
                                    <font>
                                        <Font size="8.0" />
                                    </font>
                                </Button>
                            </children>
                        </VBox>
                    </children>
                    <padding>
                        <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
                    </padding>
                </VBox>
            </children>
        </HBox>

        <!-- Section boutons secondaires -->
        <HBox alignment="CENTER" spacing="20.0">
            <children>
                <Button fx:id="settingsButton" onAction="#onSettings" styleClass="secondary-button" text="⚙️ Paramètres">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Button>

                <Button fx:id="themeButton" onAction="#onThemes" styleClass="secondary-button" text="🎨 Thèmes">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Button>

                <Button fx:id="selectProfileButton" onAction="#onSelectProfile" styleClass="control-button" text="👤 Sélectionner Profil">
                    <font>
                        <Font name="System Bold" size="10.0" />
                    </font>
                </Button>
                <Button fx:id="selectLevelButton" onAction="#onSelectLevel" styleClass="control-button" text="🎮 Sélectionner Niveau">
                    <font>
                        <Font name="System Bold" size="10.0" />
                    </font>
                </Button>
                <Button fx:id="backButton" onAction="#onBack" styleClass="control-button" text="⬅️ Retour">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
            </children>
        </HBox>
        <!-- Boutons navigation -->
        <HBox alignment="CENTER" spacing="15.0">
            <children>
                <Button fx:id="quitButton" onAction="#onQuit" styleClass="nav-button-quit" text="❌ Quitter">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
    </padding>


</VBox>
