<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.univ.bomberman.controller.MenuController">
    <top>
        <VBox alignment="CENTER" spacing="15.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="💣 SUPER BOMBERMAN 💣" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="28.0" />
                    </font>
                </Label>
                <Label text="🎮 Menu Principal" textAlignment="CENTER">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>

                <!-- ✅ NOUVEAU: Affichage du profil actuel -->
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Label text="Profil actuel:" />
                        <Label fx:id="currentProfileLabel" text="👤 Aucun profil sélectionné" textFill="#e74c3c">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>

                <Separator prefWidth="300.0" />
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
            <children>

                <!-- ✅ SECTION: Gestion des Profils -->
                <VBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Label text="👤 GESTION DES PROFILS" textFill="#2c3e50">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>

                        <GridPane hgap="15.0" vgap="10.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <Button fx:id="selectProfileButton" maxWidth="1.7976931348623157E308" onAction="#onSelectProfile"
                                        style="-fx-background-color: #3498db; -fx-text-fill: white;" text="📋 Sélectionner Profil"
                                        GridPane.columnIndex="0" GridPane.rowIndex="0">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Button>

                                <Button fx:id="createQuickProfileButton" maxWidth="1.7976931348623157E308" onAction="#onCreateQuickProfile"
                                        style="-fx-background-color: #27ae60; -fx-text-fill: white;" text="✨ Créer Profil"
                                        GridPane.columnIndex="1" GridPane.rowIndex="0">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Button>

                                <Button fx:id="profileButton" maxWidth="1.7976931348623157E308" onAction="#onProfile"
                                        text="📊 Gestion Complète" GridPane.columnIndex="0" GridPane.rowIndex="1">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Button>

                                <Button fx:id="globalStatsButton" maxWidth="1.7976931348623157E308" onAction="#onGlobalStats"
                                        text="🌍 Stats Globales" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Button>
                            </children>
                        </GridPane>
                    </children>
                </VBox>

                <Separator prefWidth="400.0" />

                <!-- ✅ SECTION: Modes de Jeu -->
                <VBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Label text="🎮 MODES DE JEU" textFill="#2c3e50">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>

                        <GridPane hgap="15.0" vgap="10.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="180.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="180.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="35.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="35.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="35.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <!-- Première ligne -->
                                <Button maxWidth="1.7976931348623157E308" onAction="#onStartGame"
                                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px;"
                                        text="⚔️ Mode Classique (2J)" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Button>

                                <Button fx:id="botButton" maxWidth="1.7976931348623157E308" onAction="#onStartBotGame"
                                        style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-size: 14px;"
                                        text="🤖 Contre IA" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Button>

                                <!-- Deuxième ligne -->
                                <Button fx:id="fourPlayerButton" maxWidth="1.7976931348623157E308" onAction="#onStartFourPlayer"
                                        style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-size: 14px;"
                                        text="👥 Bataille Royale (4J)" GridPane.columnIndex="0" GridPane.rowIndex="1">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Button>

                                <Button fx:id="ctfButton" maxWidth="1.7976931348623157E308" onAction="#onStartCTF"
                                        style="-fx-background-color: #1abc9c; -fx-text-fill: white; -fx-font-size: 14px;"
                                        text="🏁 Capture The Flag" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Button>

                                <!-- Troisième ligne -->
                                <Button maxWidth="1.7976931348623157E308" onAction="#onPlayerNames"
                                        text="🏷️ Noms des Joueurs" GridPane.columnIndex="0" GridPane.rowIndex="2">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Button>

                                <Button maxWidth="1.7976931348623157E308" text="⚙️ Paramètres" GridPane.columnIndex="1" GridPane.rowIndex="2">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Button>
                            </children>
                        </GridPane>
                    </children>
                </VBox>

                <Separator prefWidth="400.0" />

                <!-- ✅ SECTION: Informations et Aide -->
                <VBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Label text="ℹ️ AIDE ET INFORMATIONS" textFill="#2c3e50">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>

                        <HBox alignment="CENTER" spacing="15.0">
                            <children>
                                <Button text="📖 Tutoriel" onAction="#onShowTutorial">
                                    <font>
                                        <Font size="11.0" />
                                    </font>
                                </Button>

                                <Button text="🎮 Contrôles" onAction="#onShowControls">
                                    <font>
                                        <Font size="11.0" />
                                    </font>
                                </Button>

                                <Button text="🎨 Thèmes" onAction="#onShowThemes">
                                    <font>
                                        <Font size="11.0" />
                                    </font>
                                </Button>

                                <Button text="ℹ️ À propos" onAction="#onAbout">
                                    <font>
                                        <Font size="11.0" />
                                    </font>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                </VBox>

            </children>
            <padding>
                <Insets bottom="20.0" left="30.0" right="30.0" top="10.0" />
            </padding>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="15.0" BorderPane.alignment="CENTER">
            <children>
                <Button onAction="#onQuit" prefWidth="100.0"
                        style="-fx-background-color: #95a5a6; -fx-text-fill: white;" text="🚪 Quitter">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Button>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="15.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>